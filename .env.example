# Copy to .env and fill values
BOT_TOKEN=
# Comma-separated Telegram user IDs that are allowed to control the bot, e.g. 123456789,987654321
ADMIN_USER_IDS=

# Restrict file operations to this directory (default: current directory)
BASE_DIR=.

# Allow reboot/shutdown commands (requires sudo config). false/true
ALLOW_POWER_CMDS=false

# LIMITS
COMMAND_TIMEOUT_SEC=20
MAX_TEXT_REPLY_CHARS=3500
MAX_UPLOAD_BYTES=47185920

# OPTIONAL LOGGING
# Path to a log file for rotating logs (leave empty to disable file logging)
LOG_FILE=./logs/bot.log
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Rotate when reaching this size (bytes) and keep this many backups
LOG_MAX_BYTES=5242880
LOG_BACKUPS=5

# OPTIONAL SHELL COMMAND ALLOWLIST
# Comma- or semicolon-separated list of allowed command prefixes (case-insensitive).
# If empty, all commands are allowed. Example: "echo, ls, df, free"
ALLOWED_SHELL_PREFIXES=
